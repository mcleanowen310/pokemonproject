<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Liked Collections</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/likedcollections.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Pok√©mon Central</a>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/collectionlist">My Collection</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/usercollections">User Collections</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/likedcollections">Liked Collections</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/userinfo">User Info</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/viewsets">Cards</a>
        </li>
      </ul>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <% if (user) { %>
          <li class="nav-item">
            <span class="navbar-text mr-2">
              Signed in as : <%= user.first_name %> <%= user.last_name %>
            </span>
          </li>
          <li class="nav-item">
            <button class="btn btn-primary" onclick="logout()">Log Out</button>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="btn btn-primary" href="/login">Log In</a>
          </li>
          <% } %>
          <li class="nav-item">
            <a class="btn btn-primary ml-2" href="/signup">Sign Up</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-md-6">
          <h2><%= titletext %></h2>
        </div>
        <div class="col-md-6 text-right">
          <a href="/viewsets" class="btn btn-primary">Back to sets</a>
        </div>
      </div>

      <div class="row mt-4">
        <% likedCollectionsData.forEach((likedCollection, index) => { %>
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= likedCollection.username %></h5>
              <a
                href="/viewuserscollection/<%= likedCollection.user_id %>"
                class="btn btn-primary"
              >
                View Collection
              </a>
              <button
                class="btn btn-danger mt-2"
                data-collection-id="<%= likedCollection.id %>"
                data-owner-user-id="<%= likedCollection.user_id %>"
              >
                Remove from Liked
              </button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script>
      document.querySelectorAll("[data-collection-id]").forEach((button) => {
        button.addEventListener("click", function () {
          fetch("http://localhost:4000/remove-from-liked", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              liker_user_id: "<%- user && user.id %>",
              owner_user_id: this.dataset.ownerUserId, // Changed from this.dataset.collectionId
            }),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert("Collection removed from liked successfully");
                this.closest(".col-sm-12").remove();
              } else {
                alert("Failed to remove collection from liked");
              }
            });
        });
      });
      function logout() {
        fetch("/logout", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              location.reload();
            } else {
              alert("Logout failed");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
    </script>
  </body>
</html>
